<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/bottomsheet_array_setting_title_LL"

            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"

            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/bottomsheet_array_setting_TV"

                android:text="조회 기간 설정"
                android:textAppearance="@style/t1_sb"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"

                android:id="@+id/bottomsheet_array_setting_close_IV"

                android:src="@drawable/ic_close_small"

                android:padding="14dp"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/bottomsheet_array_setting_1_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bottomsheet_array_setting_title_LL"
            android:layout_marginTop="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/bottomsheet_array_setting_arrayRecent_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최신순"
                android:textAppearance="@style/l18_sb"/>

            <Space
                android:layout_width="14dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/bottomsheet_array_setting_arrayPast_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="과거순"
                android:textAppearance="@style/l18_rg"
                android:textColor="@color/disabled"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomsheet_array_setting_2_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bottomsheet_array_setting_1_LL"
            android:layout_marginTop="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/bottomsheet_array_setting_arrayPeriod_today_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘"
                android:textAppearance="@style/l18_sb"/>

            <Space
                android:layout_width="14dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/bottomsheet_array_setting_arrayPeriod_1month_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1개월"
                android:textAppearance="@style/l18_rg"
                android:textColor="@color/disabled"/>

            <Space
                android:layout_width="14dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/bottomsheet_array_setting_arrayPeriod_3month_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3개월"
                android:textAppearance="@style/l18_rg"
                android:textColor="@color/disabled"/>

            <Space
                android:layout_width="14dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/bottomsheet_array_setting_arrayPeriod_6month_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6개월"
                android:textAppearance="@style/l18_rg"
                android:textColor="@color/disabled"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomsheet_array_setting_3_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bottomsheet_array_setting_2_LL"
            android:layout_marginTop="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/bottomsheet_array_setting_arrayType_deposit_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="충전"
                android:textAppearance="@style/l18_sb"/>

            <Space
                android:layout_width="14dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/bottomsheet_array_setting_arrayType_withdraw_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현금 교환"
                android:textAppearance="@style/l18_rg"
                android:textColor="@color/disabled"/>

            <Space
                android:layout_width="14dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/bottomsheet_array_setting_arrayType_all_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체"
                android:textAppearance="@style/l18_rg"
                android:textColor="@color/disabled"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomsheet_array_setting_4_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bottomsheet_array_setting_3_LL"
            android:layout_marginTop="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/bottomsheet_array_setting_state_complete_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="완료"
                android:textAppearance="@style/l18_sb"/>

            <Space
                android:layout_width="14dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/bottomsheet_array_setting_state_standby_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대기"
                android:textAppearance="@style/l18_rg"
                android:textColor="@color/disabled"/>

            <Space
                android:layout_width="14dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/bottomsheet_array_setting_state_cancel_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"
                android:textAppearance="@style/l18_rg"
                android:textColor="@color/disabled"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@id/bottomsheet_array_setting_4_LL"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:id="@+id/bottomsheet_array_setting_submit_BT"
                style="@style/NoShadowAppCompatButton"

                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"

                android:background="@drawable/selector_button_submit"
                android:text="조회"
                android:textColor="#4A4AFA"
                android:textAppearance="@style/l1m"/>

        </FrameLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>