<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/bio_intro_symbol_iv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="104dp"
            android:src="@drawable/symbol"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/bio_intro_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="생체 인증을 등록하려면\n먼저 로그인이 필요해요."
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bio_intro_symbol_iv" />


        <LinearLayout
            android:id="@+id/bio_intro_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="horizontal"
            android:paddingHorizontal="45dp"
            android:weightSum="6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bio_intro_tv">

            <TextView
                android:id="@+id/bio_intro_pin_1_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_pin_underline"
                android:fontFamily="@font/pretendard_regular"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:textColor="@color/main_black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/bio_intro_pin_2_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_pin_underline"
                android:fontFamily="@font/pretendard_regular"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:textColor="@color/main_black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/bio_intro_pin_3_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_pin_underline"
                android:fontFamily="@font/pretendard_regular"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:textColor="@color/main_black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/bio_intro_pin_4_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_pin_underline"
                android:fontFamily="@font/pretendard_regular"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:textColor="@color/main_black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/bio_intro_pin_5_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_pin_underline"
                android:fontFamily="@font/pretendard_regular"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:textColor="@color/main_black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/bio_intro_pin_6_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_pin_underline"
                android:fontFamily="@font/pretendard_regular"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:textColor="@color/main_black"
                android:textSize="22sp" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:text="잘못된 비밀번호입니다."
            android:textColor="@color/error"
            android:textSize="13sp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@id/bio_intro_layout"
            app:layout_constraintTop_toBottomOf="@id/bio_intro_layout" />

        <TextView
            android:id="@+id/bio_intro_bio_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_pin_full_underline"
            android:text="생체 로그인 사용"
            android:textColor="@color/disabled"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bio_intro_layout"

            />

        <androidx.cardview.widget.CardView
            android:id="@+id/bio_intro_input_active_cv"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginHorizontal="16dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/active"
            app:cardCornerRadius="60dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="60dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="입력하기"
                    android:textColor="@color/active"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/bio_intro_input_inactive_cv"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginHorizontal="16dp"
            android:visibility="visible"
            app:cardBackgroundColor="@color/disabled_fill"
            app:cardCornerRadius="60dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="입력하기"
                    android:textColor="@color/disabled"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>