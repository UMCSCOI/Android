<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bookmark_background">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bookmark_background">

                <TextView
                    android:id="@+id/bookmark_title_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="즐겨찾기 등록"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textSize="22sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"/>

                <ImageView
                    android:id="@+id/bookmark_close_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_close_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:id="@+id/bookmark_name_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성명"
                    android:fontFamily="@font/pretendard_medium"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/bookmark_title_TV"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="16dp"/>

                <EditText
                    android:id="@+id/bookmark_inputName_ET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/bookmark_name_TV"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:imeOptions="actionDone"/>
                
                <ImageView
                    android:id="@+id/bookmark_inputName_remove_IV"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_close_small"
                    app:layout_constraintTop_toTopOf="@id/bookmark_inputName_ET"
                    app:layout_constraintEnd_toEndOf="@id/bookmark_inputName_ET"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:id="@+id/bookmark_inputName_warning_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_medium"
                    android:textSize="13sp"
                    android:textColor="@color/error"
                    android:text="input_null"
                    app:layout_constraintTop_toBottomOf="@id/bookmark_inputName_ET"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/bookmark_address_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지갑 주소"
                    android:fontFamily="@font/pretendard_medium"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/bookmark_inputName_warning_TV"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="16dp"/>

                <EditText
                    android:id="@+id/bookmark_inputAddress_ET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/bookmark_address_TV"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="16dp"
                    android:inputType="text"
                    android:layout_marginEnd="16dp"
                    android:imeOptions="actionDone"/>

                <ImageView
                    android:id="@+id/bookmark_inputAddress_remove_IV"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_close_small"
                    app:layout_constraintTop_toTopOf="@id/bookmark_inputAddress_ET"
                    app:layout_constraintEnd_toEndOf="@id/bookmark_inputAddress_ET"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:id="@+id/bookmark_inputAddress_warning_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_medium"
                    android:textSize="13sp"
                    android:textColor="@color/error"
                    android:text="input_null"
                    app:layout_constraintTop_toBottomOf="@id/bookmark_inputAddress_ET"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/bookmark_exchange_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="거래소"
                    android:fontFamily="@font/pretendard_medium"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/bookmark_inputAddress_warning_TV"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="16dp"/>

                <LinearLayout
                    android:id="@+id/bookmark_selectExchange_LL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/bookmark_exchange_TV"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="16dp"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bookmark_exchange_bithumb_BT"
                        android:layout_width="72dp"
                        android:layout_height="34dp"
                        android:backgroundTint="@null"
                        android:background="@drawable/select_exchange"
                        android:text="빗썸"
                        android:fontFamily="@font/pretendard_regular"
                        android:textSize="14sp"
                        android:drawableStart="@drawable/bithumb_logo" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bookmark_exchange_upbit_BT"
                        android:layout_width="84dp"
                        android:layout_height="34dp"
                        android:backgroundTint="@null"
                        android:background="@drawable/select_exchange"
                        android:text="업비트"
                        android:fontFamily="@font/pretendard_regular"
                        android:textSize="14sp"
                        android:drawableStart="@drawable/upbit_logo" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/bookmark_inputExchange_warning_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_medium"
                    android:textSize="13sp"
                    android:textColor="@color/error"
                    android:text="input_null"
                    app:layout_constraintTop_toBottomOf="@id/bookmark_selectExchange_LL"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:visibility="gone"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bookmark_save_BT"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="@null"
                    android:background="@drawable/selector_button_submit"
                    android:text="저장"
                    android:fontFamily="@font/pretendard_medium"
                    android:textSize="16sp"
                    android:textColor="@color/active"
                    app:layout_constraintTop_toBottomOf="@id/bookmark_inputExchange_warning_TV"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>