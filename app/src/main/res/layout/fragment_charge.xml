<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.stable.scoi.domain.model.enums.ChargeInputType" />

        <import type="com.stable.scoi.domain.model.enums.ChargePageType" />

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.stable.scoi.presentation.ui.charge.chart.ChargeViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">

        <com.stable.scoi.presentation.base.component.ScoiTitleBar
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftClick="@{()->vm.back()}"
            app:title="충전" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clipChildren="false"
            android:clipToPadding="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_stable_usdt_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="1,484원"
                    android:textColor="@color/main_black"
                    android:textSize="20sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/text_stable_usdt_money_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="-0.13%"
                    android:textColor="@color/active"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@id/text_stable_usdt_money"
                    app:layout_constraintTop_toBottomOf="@id/text_stable_usdt_money" />

                <ImageView
                    android:id="@+id/image_stable_usdt"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_usdt"
                    app:layout_constraintBottom_toBottomOf="@id/text_stable_usdt_money_percent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/text_stable_usdt_money" />

                <TextView
                    android:id="@+id/text_stable_usdt"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="USDT"
                    android:textColor="@color/main_black"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@id/image_stable_usdt"
                    app:layout_constraintEnd_toStartOf="@id/text_stable_usdt_money"
                    app:layout_constraintStart_toEndOf="@id/image_stable_usdt"
                    app:layout_constraintTop_toTopOf="@id/image_stable_usdt" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <WebView
                android:id="@+id/tvChartWebView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="83dp"
                android:layout_marginBottom="159dp" />

            <LinearLayout
                android:id="@+id/persistent_bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_bottom_nav_white_radius20"
                android:elevation="12dp"
                android:orientation="vertical"
                app:behavior_expandedOffset="35dp"
                app:behavior_fitToContents="false"
                app:behavior_peekHeight="96dp"
                app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

                <include
                    layout="@layout/include_bottom_sheet_top_bar"/>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="43dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{()->vm.updatePageType(ChargePageType.CHARGE)}"
                        android:text="충전하기"
                        android:textAppearance="@style/b2sm"
                        android:textColor="@{vm.uiState.pageType == ChargePageType.CHARGE ? @color/main_black : @color/disabled}" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{()->vm.updatePageType(ChargePageType.CHANGE)}"
                        android:text="현금으로 바꾸기"
                        android:textAppearance="@style/b2sm"
                        android:textColor="@{vm.uiState.pageType == ChargePageType.CHANGE ? @color/main_black : @color/disabled}" />


                </LinearLayout>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_charge_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/bg_rect_white_stroke_active_radius10"
                    android:paddingVertical="18dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/text_input_self"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:text='@{vm.uiState.pageType == ChargePageType.CHARGE ? "즉시 충전" : "즉시 교환"}'
                            android:textAppearance="@style/f4m"
                            android:textColor="@{vm.uiState.inputType == ChargeInputType.SELF ? @color/main_black : @color/disabled}" />

                        <TextView
                            android:id="@+id/text_input_select"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:text='@{vm.uiState.pageType == ChargePageType.CHARGE ? "목표 가격 충전" : "목표 가격 교환"}'
                            android:textAppearance="@style/f4m"
                            android:textColor="@{vm.uiState.inputType == ChargeInputType.SELECT ? @color/main_black : @color/disabled}" />

                        <TextView
                            android:id="@+id/text_input_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{vm.uiState.money}"
                            android:textAppearance="@style/f3m"
                            android:textColor="@color/main_black"
                            android:visibility="gone"
                            tools:text="1,449원" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edit_money"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="12dp"
                        android:afterTextChanged="@{()->vm.updateMoneyChanged()}"
                        android:background="@null"
                        android:inputType="number"
                        android:maxLines="1"
                        android:text="@{vm.uiState.money}"
                        android:textAppearance="@style/f1m"
                        app:layout_constraintEnd_toStartOf="@id/image_input_mode"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layout_tab"
                        tools:text="1,449원" />

                    <ImageView
                        android:id="@+id/image_input_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="17dp"
                        android:onClick="@{()->vm.updateInputMode()}"
                        android:src="@{vm.uiState.inputType == ChargeInputType.SELF ? @drawable/ic_input_direct : @drawable/ic_choice_amout}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="10dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_charge_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/bg_rect_white_stroke_disable_radius10"
                    android:paddingVertical="18dp">


                    <LinearLayout
                        android:id="@+id/layout_charge_count_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/text_count_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:text="수량"
                            android:textAppearance="@style/f4m"
                            android:textColor="@color/main_black" />

                        <TextView
                            android:id="@+id/text_max"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:text="최대 0개 충전 가능"
                            android:textAppearance="@style/f4m"
                            android:textColor="@color/disabled" />

                        <TextView
                            android:id="@+id/text_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{vm.uiState.count}"
                            android:textAppearance="@style/f3m"
                            android:textColor="@color/main_black"
                            android:visibility="gone"
                            tools:text="3,200" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edit_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="9dp"
                        android:afterTextChanged="@{()->vm.updateCountChanged()}"
                        android:background="@null"
                        android:hint='@{vm.uiState.pageType == ChargePageType.CHARGE ? "얼마나 충전할까요?" : "얼마나 교환할까요?"}'
                        android:inputType="number"
                        android:maxLines="1"
                        android:text="@={vm.uiState.count}"
                        android:textAppearance="@style/f1m"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layout_charge_count_tab" />

                    <TextView
                        android:id="@+id/text_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="@{vm.uiState.total}"
                        android:textAppearance="@style/f4m"
                        android:textColor="@color/sub_gray_2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/edit_count" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@{(!vm.uiState.count.empty &amp;&amp; !vm.uiState.money.empty) ? @drawable/bg_rect_active_radius60 : @drawable/bg_rect_disable_fill_radius60}">

                    <TextView
                        android:id="@+id/text_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="@{!vm.uiState.count.empty &amp;&amp; !vm.uiState.money.empty}"
                        android:text='@{vm.uiState.pageType == ChargePageType.CHARGE ? "충전 예약하기" : "교환 예약하기"}'
                        android:textAppearance="@style/l1"
                        android:textColor="@{(!vm.uiState.count.empty &amp;&amp; !vm.uiState.money.empty) ? @color/white : @color/disabled}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_total_amount"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray300"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/layout_total_analyze"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/disabled_fill"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="거래량(24H)"
                            android:textAppearance="@style/l3"
                            android:textColor="@color/sub_gray_2" />

                        <TextView
                            android:id="@+id/text_all_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="83,199,136 USDC"
                            android:textAppearance="@style/l3"
                            android:textColor="@color/sub_gray_2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="거래 금액(24H)"
                            android:textAppearance="@style/l3"
                            android:textColor="@color/sub_gray_2" />

                        <TextView
                            android:id="@+id/text_high_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="고가(당일) 1,487"
                            android:textAppearance="@style/l3"
                            android:textColor="@color/sub_gray_2" />

                        <TextView
                            android:id="@+id/text_low_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="저가(당일) 1,487"
                            android:textAppearance="@style/l3"
                            android:textColor="@color/sub_gray_2" />

                        <TextView
                            android:id="@+id/text_end_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="전일종가    1,487"
                            android:textAppearance="@style/l3"
                            android:textColor="@color/sub_gray_2" />


                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/layout_total_analyze"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:itemCount="6"
                        android:overScrollMode="never"
                        tools:listitem="@layout/item_recent_analyze" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_recent_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="89dp"
                    tools:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray300"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        android:text="최근 체결 내역"
                        android:textAppearance="@style/l1"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_header_row"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        app:layout_constraintTop_toBottomOf="@id/text_title">

                        <!-- 1/3, 2/3 위치 -->
                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/g1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.3333" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/g2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.6666" />

                        <TextView
                            android:id="@+id/text_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="시간"
                            android:textAppearance="@style/l3"
                            android:textColor="@color/sub_gray_2"
                            app:layout_constraintEnd_toStartOf="@id/g1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/text_money"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="가격(원)"
                            android:textAppearance="@style/l3"
                            android:textColor="@color/sub_gray_2"
                            app:layout_constraintEnd_toStartOf="@id/g2"
                            app:layout_constraintStart_toStartOf="@id/g1"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/text_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="체결량"
                            android:textAppearance="@style/l3"
                            android:textColor="@color/sub_gray_2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@id/g2"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_recent_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/layout_header_row"
                        tools:itemCount="6"
                        tools:listitem="@layout/item_recent_amount" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>


        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </LinearLayout>

</layout>