<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bookmark_background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bookmark_background">
            
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:id="@+id/Wallet_charge_cancel_alert_IV"
                android:src="@drawable/ic_question_mark"

                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/Wallet_charge_cancel_alert_TV"
                android:text="주문을 취소할까요?"
                android:textAppearance="@style/t1_sb"

                app:layout_constraintTop_toBottomOf="@id/Wallet_charge_cancel_alert_IV"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:id="@+id/Wallet_charge_cancel_alert_message_TV"

                android:text="현재 주문은 채결 대기 중입니다.\n취소된 주문은 다시 복구할 수 없습니다."
                android:textAppearance="@style/t2"
                android:gravity="center"
                
                app:layout_constraintTop_toBottomOf="@id/Wallet_charge_cancel_alert_TV"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            
            <FrameLayout
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@null"
                android:background="@drawable/alert_background"
                
                android:id="@+id/Wallet_charge_cancel_alert_info_FL"

                app:layout_constraintTop_toBottomOf="@id/Wallet_charge_cancel_alert_message_TV"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:id="@+id/Wallet_charge_cancel_alert_info_TV"

                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="주문 정보"
                        android:textAppearance="@style/t2"/>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        
                        android:layout_marginTop="73dp"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="주문 일시"
                            android:textAppearance="@style/t2"/>

                        <Space
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="2026. 01. 15 19:00"
                            android:textAppearance="@style/l4"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="100dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="주문 유형"
                            android:textAppearance="@style/t2"/>

                        <Space
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="USDT 충전"
                            android:textAppearance="@style/l4"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="127dp">

                        <TextView
                            android:layout_width="51dp"
                            android:layout_height="wrap_content"

                            android:text="수량"
                            android:textAppearance="@style/t2"/>

                        <Space
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="100 USDT"
                            android:textAppearance="@style/l4"/>

                    </LinearLayout>
                </FrameLayout>
            </FrameLayout>
                
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/Wallet_charge_cancel_alert_info_FL" 
                android:layout_marginTop="20dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="10dp">
                
                <TextView
                    android:layout_width="140dp"
                    android:layout_height="40dp"

                    android:id="@+id/Wallet_charge_cancel_keep_TV"
                    android:text="유지하기"
                    android:textAppearance="@style/l1m"
                    android:textColor="@color/disabled"

                    android:gravity="center"/>

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="40dp"

                    android:id="@+id/Wallet_charge_cancel_confirm_TV"
                    android:text="취소하기"
                    android:textAppearance="@style/l1m"

                    android:gravity="center"/>
                
            </LinearLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>