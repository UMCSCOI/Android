<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp">

    <ImageButton
        android:id="@+id/guide_reg_back_btn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="14dp"
        android:background="@android:color/transparent"
        android:src="@drawable/back2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <TextView
        android:id="@+id/guide_intro_tv"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:text="@string/guide_intro"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="22sp"
        android:layout_marginTop="34dp"
        android:lineSpacingExtra="5sp"
        android:textColor="@color/main_black"
        app:layout_constraintTop_toBottomOf="@id/guide_reg_back_btn"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/guide_detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="@string/guide_detail"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="3sp"
        app:layout_constraintTop_toBottomOf="@id/guide_intro_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/guide_illust_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:src="@drawable/illust_guide"
        app:layout_constraintTop_toBottomOf="@id/guide_detail_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/guide_active_cv"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="99dp"
        android:visibility="visible"
        app:cardBackgroundColor="#4A4AFA"
        app:cardCornerRadius="60dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/guide_illust_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="가이드 보기"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
    
    <TextView
        android:id="@+id/explain_skip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="건너뛰기"
        android:layout_marginBottom="14dp"
        android:textColor="@color/disabled"
        android:background="@drawable/bg_pin_full_underline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>

</layout>