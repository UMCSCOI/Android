<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp">

    <ImageButton
        android:id="@+id/join_back_btn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:background="@android:color/transparent"
        android:src="@drawable/back2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/join_intro_tv"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="@string/join_intro"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/join_back_btn" />

    <TextView
        android:id="@+id/korean_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="국문 성명"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/join_intro_tv" />

    <EditText
        android:id="@+id/korean_name_et"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:hint="홍길동"
        android:inputType="text"
        android:paddingEnd="40dp"
        android:textColor="@color/disabled"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/korean_name_tv"
        android:background="@android:color/transparent"
        />

    <View
        android:id="@+id/korean_name_line"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/disabled"
        app:layout_constraintTop_toBottomOf="@id/korean_name_et"
        android:visibility="visible"
        />

    <View
        android:id="@+id/korean_error_name_line"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/error"
        app:layout_constraintTop_toBottomOf="@id/korean_name_et"
        android:visibility="invisible"
        />

    <View
        android:id="@+id/korean_selectedname_line"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/main_black"
        app:layout_constraintTop_toBottomOf="@id/korean_name_et"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/korean_error_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="국문만 입력 가능합니다."
        android:textColor="@color/error"
        android:textSize="13dp"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toStartOf="@id/korean_name_et"
        app:layout_constraintTop_toBottomOf="@id/korean_name_et"
        android:visibility="invisible"
        />


    <ImageView
        android:id="@+id/korean_name_clear_iv"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/no_m"
        app:layout_constraintBottom_toBottomOf="@id/korean_name_et"
        app:layout_constraintEnd_toEndOf="@id/korean_name_et"
        app:layout_constraintTop_toTopOf="@id/korean_name_et"
        android:visibility="invisible"
        />


    <TextView
        android:id="@+id/eng_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="영문 성명"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/korean_error_tv" />

    <LinearLayout
        android:id="@+id/eng_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/eng_name_tv"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/eng_last_name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="HONG"
                android:inputType="text"
                android:paddingVertical="10dp"
                android:paddingEnd="30dp"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/eng_last_name_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/disabled"
                app:layout_constraintTop_toBottomOf="@id/eng_last_name_et" />

            <View
                android:id="@+id/eng_selected_last_name_line"
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:background="@color/main_black"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/eng_last_name_et" />

            <View
                android:id="@+id/eng_error_last_name_line"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/error"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/eng_last_name_et" />

            <TextView
                android:id="@+id/eng_last_name_error_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="영문만 입력 가능합니다."
                android:textColor="@color/error"
                android:textSize="12sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/eng_last_name_line" />

            <ImageView
                android:id="@+id/eng_last_name_clear_iv"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/no_m"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@id/eng_last_name_et"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/eng_last_name_et" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5">

            <EditText
                android:id="@+id/eng_first_name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="GILDONG"
                android:inputType="text"
                android:paddingVertical="10dp"
                android:paddingEnd="30dp"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/eng_first_name_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/disabled"
                app:layout_constraintTop_toBottomOf="@id/eng_first_name_et" />

            <View
                android:id="@+id/eng_selected_first_name_line"
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:background="@color/main_black"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/eng_first_name_et" />

            <View
                android:id="@+id/eng_error_first_name_line"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/error"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/eng_first_name_et" />

            <TextView
                android:id="@+id/eng_first_name_error_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="영문만 입력 가능합니다."
                android:textColor="@color/error"
                android:textSize="12sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/eng_first_name_line" />

            <ImageView
                android:id="@+id/eng_first_name_clear_iv"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/no_m"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@id/eng_first_name_et"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/eng_first_name_et" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/eng_passport_helper_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:text="여권의 성/이름과 일치하도록 입력해주세요."
        android:textColor="@color/disabled"
        android:textSize="13sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/eng_name_layout" />




    <TextView
        android:id="@+id/reg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주민등록번호 앞 7자리"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/eng_name_layout"
        app:layout_constraintTop_toBottomOf="@id/eng_passport_helper_tv"/>


    <LinearLayout
        android:id="@+id/reg_num_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/reg_tv"
        app:layout_constraintStart_toStartOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/reg_num_front_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="●●●●●●"
                android:inputType="number"
                android:maxLength="6"
                android:paddingVertical="8dp"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/reg_num_front_line"
                android:layout_width="match_parent"
                android:layout_height="1.0dp"
                android:background="@color/disabled"
                app:layout_constraintTop_toBottomOf="@id/reg_num_front_et"
                android:visibility="visible"/>

            <View
                android:id="@+id/reg_num_active_front_line"
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:background="@color/main_black"
                app:layout_constraintTop_toBottomOf="@id/reg_num_front_et"
                android:visibility="invisible"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:text=" - "
            android:textSize="20sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/reg_num_rear_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="●"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:paddingVertical="8dp"
                android:paddingEnd="30dp"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/reg_eye_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/eye"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@id/reg_num_rear_et"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/reg_num_rear_et" />

            <View
                android:id="@+id/reg_num_rear_line"
                android:layout_width="match_parent"
                android:layout_height="1.0dp"
                android:background="@color/disabled"
                app:layout_constraintTop_toBottomOf="@id/reg_num_rear_et"
                android:visibility="visible"/>

            <View
                android:id="@+id/reg_num_selected_rear_line"
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:background="@color/main_black"
                app:layout_constraintTop_toBottomOf="@id/reg_num_rear_et"
                android:visibility="invisible"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/reg_num_input_layout">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_personal_member"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardBackgroundColor="@color/active"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:cardMaxElevation="2dp"
                app:cardPreventCornerOverlap="false">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    app:cardCornerRadius="10dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="개인 회원"
                        android:textColor="@color/active"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_corporate_member"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardBackgroundColor="@color/disabled"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp"
                app:cardPreventCornerOverlap="false">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="1dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="법인 회원"
                        android:textColor="@color/disabled"
                        android:textSize="16sp" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/join_input_active_cv"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginHorizontal="16dp"
        app:cardBackgroundColor="@color/active"
        app:cardCornerRadius="60dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="60dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="입력하기"
                android:textColor="@color/active"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/join_input_inactive_cv"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginHorizontal="16dp"
        app:cardBackgroundColor="@color/disabled_fill"
        app:cardCornerRadius="60dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="입력하기"
                android:textColor="@color/disabled"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/join_next_inactive_cv"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginHorizontal="16dp"
        app:cardBackgroundColor="@color/disabled_fill"
        app:cardCornerRadius="60dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="다음"
                android:textColor="@color/disabled"
                android:textSize="16sp"
                android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/join_next_active_cv"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginHorizontal="16dp"
        app:cardBackgroundColor="@color/active_fill"
        app:cardCornerRadius="60dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="다음"
                android:textColor="@color/active"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>