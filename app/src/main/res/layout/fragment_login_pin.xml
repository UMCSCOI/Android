<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    >

    <ImageView
        android:id="@+id/login_pin_symbol_iv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="104dp"
        android:src="@drawable/symbol"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/login_pin_intro_tv"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="@string/scoi_pin_intro"
        android:textSize="22sp"
        android:lineSpacingExtra="5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_pin_symbol_iv" />


        <LinearLayout
        android:id="@+id/login_pin_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        android:paddingHorizontal="45dp"
        android:weightSum="6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_pin_intro_tv"
            >


        <EditText
            android:id="@+id/login_pin_1_et"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:maxLength="1"
            android:inputType="number"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:textColor="@color/main_black"
            android:textSize="22sp"
            android:background="@drawable/selector_pin_background"
            />

        <EditText
            android:id="@+id/login_pin_2_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="1"
            android:inputType="number"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:textColor="@color/main_black"
            android:textSize="22sp"
            android:background="@drawable/selector_pin_background"
            />

        <EditText
            android:id="@+id/login_pin_3_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="1"
            android:inputType="number"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:textColor="@color/main_black"
            android:textSize="22sp"
            android:background="@drawable/selector_pin_background"
            />

        <EditText
            android:id="@+id/login_pin_4_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="1"
            android:inputType="number"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:textColor="@color/main_black"
            android:textSize="22sp"
            android:background="@drawable/selector_pin_background"
            />

        <EditText
            android:id="@+id/login_pin_5_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="1"
            android:inputType="number"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:textColor="@color/main_black"
            android:textSize="22sp"
            android:background="@drawable/selector_pin_background"
            />

        <EditText
            android:id="@+id/login_pin_6_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="1"
            android:inputType="number"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:textColor="@color/main_black"
            android:textSize="22sp"
            android:background="@drawable/selector_pin_background"
            />

    </LinearLayout>


        <TextView
            android:id="@+id/login_pin_error_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="49dp"
            android:text="잘못된 비밀번호입니다."
            android:textColor="@color/error"
            android:textSize="13sp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@id/login_pin_layout"
            app:layout_constraintTop_toBottomOf="@id/login_pin_layout" />

        <TextView
        android:id="@+id/login_pin_bio_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:textSize="14sp"
        android:textColor="@color/disabled"
        android:background="@drawable/bg_pin_full_underline"
        android:text="생체 로그인 사용"
        app:layout_constraintTop_toBottomOf="@id/login_pin_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <androidx.cardview.widget.CardView
        android:id="@+id/login_pin_input_active_cv"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginHorizontal="16dp"
        app:cardBackgroundColor="@color/active_fill"
        app:cardCornerRadius="60dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="입력하기"
                android:textColor="@color/active"
                android:textSize="16sp"
                android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/login_pin_input_inactive_cv"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginHorizontal="16dp"
        app:cardBackgroundColor="@color/disabled_fill"
        app:cardCornerRadius="60dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="입력하기"
                android:textColor="@color/disabled"
                android:textSize="16sp"
                android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>