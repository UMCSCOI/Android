<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:id="@+id/login_pin_symbol_iv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="104dp"
        android:src="@drawable/symbol"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/login_pin_intro_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="@string/scoi_pin_intro"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_pin_symbol_iv" />


    <LinearLayout
        android:id="@+id/login_pin_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        android:paddingHorizontal="45dp"
        android:weightSum="6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_pin_intro_tv">

        <TextView
            android:id="@+id/pin_1_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:textColor="@color/main_black"
            android:textSize="22sp"
            android:background="@drawable/bg_pin_underlline"
            />

        <TextView
            android:id="@+id/pin_2_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:textColor="@color/main_black"
            android:textSize="22sp"
            android:background="@drawable/bg_pin_underlline"
            />

        <TextView
            android:id="@+id/pin_3_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:textColor="@color/main_black"
            android:textSize="22sp"
            android:background="@drawable/bg_pin_underlline"
            />

        <TextView
            android:id="@+id/pin_4_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:textColor="@color/main_black"
            android:textSize="22sp"
            android:background="@drawable/bg_pin_underlline"
            />

        <TextView
            android:id="@+id/pin_5_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:textColor="@color/main_black"
            android:textSize="22sp"
            android:background="@drawable/bg_pin_underlline"
            />

        <TextView
            android:id="@+id/pin_6_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:textColor="@color/main_black"
            android:textSize="22sp"
            android:background="@drawable/bg_pin_underlline"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="잘못된 비밀번호입니다."
        android:textColor="@color/error"
        android:textSize="13sp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/login_pin_layout"
        app:layout_constraintStart_toStartOf="@id/login_pin_layout"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/login_pin_bio_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="14sp"
        android:textColor="@color/disabled"
        android:background="@drawable/bg_pin_full_underline"
        android:text="생체 로그인 사용"
        app:layout_constraintTop_toBottomOf="@id/login_pin_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />





</androidx.constraintlayout.widget.ConstraintLayout>