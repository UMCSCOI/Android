<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/Transfer_backArrow_IV"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_back"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/Trasnfer_password_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기존에 사용 중인"
                android:fontFamily="@font/pretendard_semibold"
                android:textSize="22sp"
                android:textColor="@color/main_black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="100dp"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/simple_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="간편 비밀번호"
                android:textSize="22sp"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/main_black"
                app:layout_constraintTop_toBottomOf="@id/Trasnfer_password_TV"
                app:layout_constraintStart_toStartOf="@id/Trasnfer_password_TV"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="를 입력해주세요."
                android:fontFamily="@font/pretendard_regular"
                android:textSize="22sp"
                android:textColor="@color/main_black"
                app:layout_constraintTop_toBottomOf="@id/Trasnfer_password_TV"
                app:layout_constraintStart_toEndOf="@id/simple_password" />

            <LinearLayout
                android:id="@+id/login_pin_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="100dp"
                android:orientation="horizontal"
                android:paddingHorizontal="45dp"
                android:weightSum="6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/simple_password"
                >


                <EditText
                    android:id="@+id/login_pin_1_et"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:maxLength="1"
                    android:inputType="number"
                    android:fontFamily="@font/pretendard_regular"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:textColor="@color/main_black"
                    android:textSize="22sp"
                    android:background="@drawable/selector_pin_background"
                    />

                <EditText
                    android:id="@+id/login_pin_2_et"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:maxLength="1"
                    android:inputType="number"
                    android:fontFamily="@font/pretendard_regular"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:textColor="@color/main_black"
                    android:textSize="22sp"
                    android:background="@drawable/selector_pin_background"
                    />

                <EditText
                    android:id="@+id/login_pin_3_et"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:maxLength="1"
                    android:inputType="number"
                    android:fontFamily="@font/pretendard_regular"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:textColor="@color/main_black"
                    android:textSize="22sp"
                    android:background="@drawable/selector_pin_background"
                    />

                <EditText
                    android:id="@+id/login_pin_4_et"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:maxLength="1"
                    android:inputType="number"
                    android:fontFamily="@font/pretendard_regular"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:textColor="@color/main_black"
                    android:textSize="22sp"
                    android:background="@drawable/selector_pin_background"
                    />

                <EditText
                    android:id="@+id/login_pin_5_et"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:maxLength="1"
                    android:inputType="number"
                    android:fontFamily="@font/pretendard_regular"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:textColor="@color/main_black"
                    android:textSize="22sp"
                    android:background="@drawable/selector_pin_background"
                    />

                <EditText
                    android:id="@+id/login_pin_6_et"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:maxLength="1"
                    android:inputType="number"
                    android:fontFamily="@font/pretendard_regular"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:textColor="@color/main_black"
                    android:textSize="22sp"
                    android:background="@drawable/selector_pin_background"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_password_error"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="49dp"
                android:text="잘못된 비밀번호입니다."
                android:textColor="#FF0000"
                android:textSize="13sp"
                android:fontFamily="@font/pretendard_regular"
                android:visibility="gone"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@id/login_pin_layout"
                app:layout_constraintStart_toStartOf="@id/login_pin_layout"
                />

            <FrameLayout
                android:id="@+id/Transfer_password_forgot_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="43dp"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintTop_toBottomOf="@id/tv_password_error"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tv_forgot_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호를 잊으셨나요?"
                    android:fontFamily="@font/pretendard_regular"
                    android:textSize="14sp"
                    android:textColor="#767676"
                    android:background="@drawable/bg_thick_underline"
                    android:paddingBottom="2dp"/>
            </FrameLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Transfer_password_input_TV"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="입력하기"
                android:textColor="#4A4AFA"
                android:textSize="16sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:backgroundTint="#F2F6FF"
                app:cornerRadius="28dp"
                app:strokeColor="#F2F6FF"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@id/login_pin_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="120dp"/>

            <View
                android:id="@+id/focusDummy"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>