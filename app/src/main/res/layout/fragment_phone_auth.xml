<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp">

        <ImageButton
            android:id="@+id/phone_auth_back_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:background="@android:color/transparent"
            android:src="@drawable/back2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/phone_auth_intro_tv"
            android:layout_width="180dp"
            android:layout_height="62dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="34dp"
            android:fontFamily="@font/pretendard_medium"
            android:lineSpacingExtra="5sp"
            android:text="@string/phone_auth_intro"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_auth_back_btn" />

        <TextView
            android:id="@+id/phone_auth_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:text="휴대폰 번호"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_auth_intro_tv" />

        <EditText
            android:id="@+id/phone_auth_number_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:hint="-빼고 숫자만 입력해주세요"
            android:inputType="phone"
            android:paddingVertical="8dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_auth_number_tv" />


        <TextView
            android:id="@+id/phone_auth_number_send_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/no_m"
            android:text="전송하기"
            android:layout_marginEnd="16dp"
            android:textColor="@color/active"
            android:textSize="13sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/phone_auth_number_et"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/phone_auth_number_et" />

        <View
            android:id="@+id/phone_auth_number_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:background="@color/disabled"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_auth_number_et" />

        <View
            android:id="@+id/phone_auth_selected_number_line"
            android:layout_width="0dp"
            android:layout_height="1.2dp"
            android:layout_marginHorizontal="16dp"
            android:background="@color/main_black"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_auth_number_et" />


        <TextView
            android:id="@+id/phone_auth_code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="인증 번호"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_auth_number_line" />

        <EditText
            android:id="@+id/phone_auth_code_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:hint="인증번호 6자리"
            android:inputType="number"
            android:maxLength="6"
            android:paddingVertical="8dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_auth_code_tv" />

        <View
            android:id="@+id/phone_auth_code_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:background="@color/disabled"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_auth_code_et" />

        <View
            android:id="@+id/phone_auth_selected_code_line"
            android:layout_width="0dp"
            android:layout_height="1.2dp"
            android:layout_marginHorizontal="16dp"
            android:background="@color/main_black"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_auth_code_et" />

        <ImageView
            android:id="@+id/phone_auth_code_check_iv"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginEnd="22dp"
            android:src="@drawable/no_m"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/phone_auth_code_et"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/phone_auth_code_et" />

        <ImageView
            android:id="@+id/phone_auth_code_active_check_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="22dp"
            android:src="@drawable/active_check"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/phone_auth_code_et"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/phone_auth_code_et" />

        <TextView
            android:id="@+id/phone_auth_code_active_timer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="22dp"
            android:text="5:00"
            android:textColor="@color/active"
            android:textSize="13sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/phone_auth_code_et"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/phone_auth_code_et" />


        <TextView
            android:id="@+id/phone_auth_helper_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="발송된 인증번호 6자리를 입력해주세요."
            android:textColor="@color/main_black"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_auth_code_line" />

        <TextView
            android:id="@+id/phone_auth_code_retry_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="인증번호가 재발송되었습니다."
            android:textColor="@color/main_black"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_auth_code_line" />

        <TextView
            android:id="@+id/phone_auth_expired_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="인증번호가 만료되었습니다. 인증 번호를 재발송해주세요."
            android:textColor="@color/error"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_auth_code_line" />

        <TextView
            android:id="@+id/phone_auth_check_helper_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="인증 번호가 일치합니다."
            android:textColor="@color/disabled"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_auth_code_line" />

        <TextView
            android:id="@+id/phone_auth_error_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="인증번호가 일치하지 않습니다"
            android:textColor="@color/error"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_auth_code_line" />

        <androidx.cardview.widget.CardView
            android:id="@+id/phone_auth_input_active_cv"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginHorizontal="16dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/active_fill"
            app:cardCornerRadius="60dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="입력하기"
                    android:textColor="@color/active"
                    android:textSize="16sp"
                    android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/phone_auth_input_inactive_cv"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginHorizontal="16dp"
            android:visibility="visible"
            app:cardBackgroundColor="@color/disabled_fill"
            app:cardCornerRadius="60dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="입력하기"
                android:textColor="@color/disabled"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>