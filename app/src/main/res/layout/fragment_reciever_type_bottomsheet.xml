<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!-- 지금은 비워둬도 됨 -->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/bottomsheet_recievertype_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="받는 분 유형"
            android:textSize="22sp"
            android:fontFamily="@font/pretendard_semibold"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>

        <ImageView
            android:id="@+id/bottomsheet_recievertype_close_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_close_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:id="@+id/bottomsheet_recievertype_individual_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bottomsheet_recievertype_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/bottomsheet_recievertype_individual_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_individual"/>

            <TextView
                android:id="@+id/bottomsheet_recievertype_individual_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_medium"
                android:text="개인"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomsheet_recievertype_corporation_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bottomsheet_recievertype_individual_ll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="14dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/bottomsheet_recievertype_corporation_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_corporation"/>

            <TextView
                android:id="@+id/bottomsheet_recievertype_corporation_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="법인"
                android:textSize="16sp"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginTop="4dp"
                android:layout_marginStart="5dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>