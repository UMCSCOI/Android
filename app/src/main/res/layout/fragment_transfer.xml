            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Transfer_bookmark_RV"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/Transfer_directory_LL"
                app:layout_constraintBottom_toTopOf="@id/Transfer_next_FL"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>


            <FrameLayout
                android:id="@+id/Transfer_next_FL"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="#FFFFFF">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:id="@+id/Transfer_next_TV"
                    style="@style/NoShadowAppCompatButton"

                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="10dp"

                    android:background="@drawable/selector_button_submit"
                    android:text="다음"
                    android:textColor="@color/selector_button_text"
                    android:textAppearance="@style/l1m"/>

            </FrameLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>