<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:id="@+id/cd">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"

                android:gravity="center_vertical"
                android:id="@+id/Transfer_title_LL"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"

                    android:id="@+id/Transfer_backArrow_IV"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_back"/>

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:id="@+id/Transfer_title_TV"

                    android:text="이체"
                    android:textAppearance="@style/t4_sb"/>

            </LinearLayout>

            <TextView
                android:id="@+id/Transfer_subTitle1_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="누구에게"
                android:fontFamily="@font/pretendard_semibold"
                android:textSize="22sp"
                android:textColor="@color/active"
                app:layout_constraintTop_toBottomOf="@id/Transfer_title_LL"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/Transfer_subTitle2_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보내시겠어요?"
                android:fontFamily="@font/pretendard_semibold"
                android:textSize="22sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/Transfer_title_LL"
                app:layout_constraintStart_toEndOf="@id/Transfer_subTitle1_TV"
                android:layout_marginTop="20dp"
                android:layout_marginStart="4dp"/>


            <TextView
                android:id="@+id/Transfer_name_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="국문 성명"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/Transfer_subTitle1_TV"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="40dp"
                android:layout_marginStart="16dp"/>


            <EditText
                android:id="@+id/Transfer_inputName_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/Transfer_name_TV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="actionDone"/>

            <TextView
                android:id="@+id/Transfer_inputName_warning_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="13sp"
                android:textColor="@color/error"
                android:text="input_null"
                app:layout_constraintTop_toBottomOf="@id/Transfer_inputName_ET"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/Transfer_nameENG_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영문 성명"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/Transfer_inputName_warning_TV"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="14dp"
                android:layout_marginStart="16dp"/>


            <EditText
                android:id="@+id/Transfer_inputName1ENG_ET"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/Transfer_nameENG_TV"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="actionDone"/>

            <EditText
                android:id="@+id/Transfer_inputName2ENG_ET"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/Transfer_nameENG_TV"
                app:layout_constraintStart_toEndOf="@id/Transfer_inputName1ENG_ET"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="16dp"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="actionDone"/>

            <TextView
                android:id="@+id/Transfer_inputNameENG_warning_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="13sp"
                android:textColor="@color/error"
                android:text="input_null"
                app:layout_constraintTop_toBottomOf="@id/Transfer_inputName1ENG_ET"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:visibility="gone"/>



<!--            <TextView-->
<!--                android:id="@+id/Transfer_receiverType_TV"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="50dp"-->
<!--                android:text="개인"-->
<!--                app:layout_constraintTop_toTopOf="@id/Transfer_inputName_ET"-->
<!--                app:layout_constraintEnd_toEndOf="@id/Transfer_inputName_ET"-->
<!--                app:layout_constraintBottom_toBottomOf="@id/Transfer_inputName_ET"-->
<!--                android:padding="10dp"-->
<!--                android:layout_marginEnd="10dp"-->
<!--                android:visibility="gone"/>-->


            <TextView
                android:id="@+id/Transfer_address_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지갑 주소"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/Transfer_inputNameENG_warning_TV"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="14dp"
                android:layout_marginStart="16dp"/>

            <EditText
                android:id="@+id/Transfer_inputAddress_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/Transfer_address_TV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:inputType="text"
                android:layout_marginEnd="16dp"
                android:imeOptions="actionDone"/>

            <TextView
                android:id="@+id/Transfer_inputAddress_warning_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="13sp"
                android:textColor="@color/error"
                android:text="input_null"
                app:layout_constraintTop_toBottomOf="@id/Transfer_inputAddress_ET"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/Transfer_corpName_KOR_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="법인 국문명"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/Transfer_inputAddress_warning_TV"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/Transfer_corpName_KOR_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/Transfer_corpName_KOR_TV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:inputType="text"
                android:visibility="gone"
                android:imeOptions="actionDone"/>


            <TextView
                android:id="@+id/Transfer_corpName_ENG_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="법인 영문명"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/Transfer_corpName_KOR_ET"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/Transfer_corpName_ENG_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/Transfer_corpName_ENG_TV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:inputType="text"
                android:visibility="gone"
                android:imeOptions="actionDone"/>


            <EditText
                android:id="@+id/Transfer_inputExchange_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="거래소"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="20sp"
                android:textColor="@color/disabled"
                app:layout_constraintTop_toBottomOf="@+id/Transfer_corpName_ENG_ET"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/Transfer_inputExchange_warning_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="13sp"
                android:textColor="@color/error"
                android:text="input_null"
                app:layout_constraintTop_toBottomOf="@id/Transfer_inputExchange_ET"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:visibility="gone"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/Transfer_inputExchange_warning_TV"
                android:layout_marginTop="26dp"
                android:id="@+id/Transfer_directory_LL">

                <TextView
                    android:id="@+id/Transfer_directory_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주소록"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textSize="20sp"
                    android:textColor="@color/main_black"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>
                
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                
                <ImageView
                    android:id="@+id/Transfer_directory_ic_IV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_info"
                    android:layout_marginEnd="16dp"/>
            </LinearLayout>
            
            <TextView
                android:id="@+id/Transfer_directory_ic_popup_TV"
                android:layout_width="298dp"
                android:layout_height="146dp"
                android:text="거래소의 보안 정책에 따라 가상자산을 다른 지갑으로 출금하려면 해당 출금 주소가 거래소에 사전 등록되어 있어야 합니다.\n스코이에서는 이미 거래소에 등록된 출금 주소만 사용할 수 있으며, 새로운 출금 주소 추가는 거래소에 직접 진행해주세요."
                android:textAppearance="@style/l2"
                android:textColor="@color/white"
                android:background="@drawable/popup_background"
                app:layout_constraintBottom_toTopOf="@id/Transfer_directory_LL"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/Transfer_directory_ic_popup_IV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/popup_root"
                app:layout_constraintTop_toBottomOf="@id/Transfer_directory_ic_popup_TV"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="25dp"
                android:visibility="gone"/>



<!--            <TextView-->
<!--                android:id="@+id/Transfer_bookmark_add_TV"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="등록"-->
<!--                android:fontFamily="@font/pretendard_regular"-->
<!--                android:textColor="@color/sub_gray_1"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="parent"-->
<!--                android:layout_marginEnd="16dp"-->
