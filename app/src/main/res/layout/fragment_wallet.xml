<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/Wallet_wallet_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 지갑"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:textAppearance="@style/t1_sb"/>

        <ImageView
            android:id="@+id/image_my_page"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_mypage"/>

        <LinearLayout
            android:id="@+id/Wallet_property_LL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="101dp"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/Wallet_exchange_IV"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/bithumb_logo"/>

            <Space
                android:layout_width="4dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/Wallet_exchange_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="빗썸"
                android:textAppearance="@style/t1_sb"/>

            <Space
                android:layout_width="4dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보유 자산"
                android:textAppearance="@style/b1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Wallet_exchangeSelect_LL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/Wallet_property_LL"
            app:layout_constraintBottom_toBottomOf="@id/Wallet_property_LL"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_goneMarginEnd="16dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="거래소 선택"
                android:textColor="@color/sub_gray_2"
                android:textAppearance="@style/t2"/>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_arrow_down"
                android:layout_marginStart="4dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/Wallet_inMyPocket_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 지갑에"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="187dp"
            android:layout_marginEnd="16dp"
            android:textAppearance="@style/f2"/>

        <TextView
            android:id="@+id/Wallet_won_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"
            app:layout_constraintTop_toBottomOf="@id/Wallet_inMyPocket_TV"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:textAppearance="@style/b1_md"/>

        <TextView
            android:id="@+id/Wallet_amount_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="금액"
            app:layout_constraintEnd_toStartOf="@id/Wallet_won_TV"
            app:layout_constraintTop_toTopOf="@id/Wallet_won_TV"
            android:layout_marginEnd="4dp"
            android:textAppearance="@style/t1_sb"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="276dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Wallet_withdraw_BT"
                android:layout_width="157dp"
                android:layout_height="42dp"
                android:text="원화 출금"
                android:textColor="#4A4AFA"
                android:textAppearance="@style/l1m"
                android:background="@drawable/round_button_submit"
                style="@style/NoShadowAppCompatButton"/>

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Wallet_deposit_BT"
                android:layout_width="157dp"
                android:layout_height="42dp"
                android:text="원화 입금"
                android:textColor="#4A4AFA"
                android:textAppearance="@style/l1m"
                android:background="@drawable/round_button_submit"
                style="@style/NoShadowAppCompatButton"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="355dp"
            android:background="#E0E0E0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최근 거래"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="375dp"
            android:layout_marginStart="16dp"
            android:textAppearance="@style/f2_sb"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="378dp">

            <TextView
                android:id="@+id/Wallet_recent_toggle1_TV"
                android:gravity="center"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:text="입출금"
                android:background="@drawable/toggle_activated"
                android:textColor="@color/white"
                android:textAppearance="@style/l3"/>

            <Space
                android:layout_width="4dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/Wallet_recent_toggle2_TV"
                android:gravity="center"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:text="충전"
                android:textAppearance="@style/l3"
                android:textColor="@color/disabled"
                android:background="@drawable/toggle_disabled"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="423dp"
            android:background="#F5F5F5"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/Wallet_recent_array_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최신순"
                android:layout_marginStart="16dp"
                android:textAppearance="@style/l2"/>

            <View
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:background="@color/disabled"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"/>

            <TextView
                android:id="@+id/Wallet_recent_length_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1개월"
                android:textAppearance="@style/l2"/>

            <View
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:background="@color/disabled"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"/>

            <TextView
                android:id="@+id/Wallet_recent_searchType_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="충전"
                android:textAppearance="@style/l2"/>

            <View
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:background="@color/disabled"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"/>

            <TextView
                android:id="@+id/Wallet_recent_state_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="완료"
                android:textAppearance="@style/l2"/>

            <ImageView
                android:id="@+id/Wallet_recent_array_setting_IV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_down"
                android:layout_marginStart="8dp"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="483dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/Wallet_recent_mounth_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025. 12"
                android:textAppearance="@style/l18_sb"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/Wallet_recent_mounth_detail_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025.11.21~2025.12.21"
                android:textColor="@color/sub_gray_2"
                android:textAppearance="@style/l2"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Wallet_recentList_VP"
            android:layout_width="match_parent"
            android:layout_height="222dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="518dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>







    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>