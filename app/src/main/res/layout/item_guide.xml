<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/guide_step_back_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:background="@android:color/transparent"
            android:contentDescription="뒤로가기"
            android:src="@drawable/back2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/guide_step_number"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/pretendard_semibold"
            android:lineSpacingExtra="3sp"
            android:text="01"
            android:textColor="@color/active"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guide_step_back_btn" />

        <TextView
            android:id="@+id/guide_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:fontFamily="@font/pretendard_semibold"
            android:text="거래소 API 페이지 접속"
            android:textColor="@color/main_black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guide_step_number" />

        <LinearLayout
            android:id="@+id/exchange_tab_layout"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guide_title_tv">

            <androidx.cardview.widget.CardView
                android:id="@+id/bithumb_tab_cv"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/active_fill"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pretendard_regular"
                    android:gravity="center"
                    android:text="빗썸"
                    android:textColor="@color/active"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/upbit_tab_cv"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pretendard_regular"
                    android:gravity="center"
                    android:text="업비트"
                    android:textColor="@color/disabled"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/guide_image_container"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="@color/disabled_fill"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/exchange_tab_layout"
            app:strokeColor="@color/gray300"
            app:strokeWidth="1dp">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/guide_image_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/bithumb_1" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/guide_text_tv"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/pretendard_regular"
            android:lineSpacingExtra="5sp"
            android:paddingHorizontal="16dp"
            android:text="@string/guide_1"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guide_image_container" />

        <androidx.cardview.widget.CardView
            android:id="@+id/guide_notice_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/disabled_fill"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
            app:contentPadding="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guide_text_tv">

            <TextView
                android:id="@+id/guide_explain_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/pretendard_regular"
                android:gravity="center"
                android:text="* API 설정은 보안상 PC 웹 환경에서만 가능합니다."
                android:textColor="@color/disabled"
                android:textSize="12sp" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>