<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Wallet_list_VIEW">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/Wallet_list_1_LL"

            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/Wallet_list_time_TV"

                android:text="12.14 21:49:26"
                android:textAppearance="@style/t2"
                android:textColor="#505050"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="|"
                android:textAppearance="@style/t2"
                android:textColor="#505050"

                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/Wallet_list_assetSymbol_TV"

                android:text="USDT"
                android:textAppearance="@style/t2"
                android:textColor="#505050"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/Wallet_list_2_LL"

            app:layout_constraintTop_toBottomOf="@id/Wallet_list_1_LL"
            android:layout_marginTop="10dp"

            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingHorizontal="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/Wallet_list_title_assetSymbol_TV"

                android:text="USDT"
                android:textAppearance="@style/l18_sb"/>

            <Space
                android:layout_width="4dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/Wallet_list_state_TV"

                android:text="입금"
                android:textAppearance="@style/l18_sb"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/Wallet_list_amount_TV"

                android:text="+100"
                android:textAppearance="@style/l18_sb"
                android:textColor="#4A4AFA"/>

            <Space
                android:layout_width="4dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/Wallet_list_assetSymbol_title_TV"

                android:text="USDT"
                android:textAppearance="@style/l18_sb"/>

        </LinearLayout>











    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
