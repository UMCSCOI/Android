<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.stable.scoi.presentation.ui.splash.SplashFragment"
        android:label="스플래시"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splash_fragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/tansfer_fragment"
        android:name="com.stable.scoi.presentation.ui.transfer.TransferFragment">
        <action
            android:id="@+id/action_tansfer_fragment_to_transfer_amount_fragment"
            app:destination="@id/transfer_amount_fragment" />
    </fragment>

    <fragment
        android:id="@+id/transfer_amount_fragment"
        android:name="com.stable.scoi.presentation.ui.transfer.TransferAmountFragment">
        <action
            android:id="@+id/action_transfer_amount_fragment_to_transfer_password_fragment"
            app:destination="@id/transfer_password_fragment" />
    </fragment>

    <fragment
        android:id="@+id/transfer_password_fragment"
        android:name="com.stable.scoi.presentation.ui.transfer.TransferPasswordFragment">
        <action
            android:id="@+id/action_transfer_password_fragment_to_transfer_complete_fragment"
            app:destination="@id/transfer_complete_fragment" />
    </fragment>

    <fragment
        android:id="@+id/transfer_complete_fragment"
        android:name="com.stable.scoi.presentation.ui.transfer.TransferCompleteFragment"/>

    <fragment
        android:id="@+id/chargeMainFragment"
        android:name="com.stable.scoi.presentation.ui.charge.main.ChargeMainFragment"
        android:label="충전 화면 메인"
        tools:layout="@layout/fragment_charge_main"/>

    <fragment
        android:id="@+id/chargeFragment"
        android:name="com.stable.scoi.presentation.ui.charge.chart.ChargeFragment"
        android:label="충전 화면"
        tools:layout="@layout/fragment_charge"/>

    <fragment
        android:id="@+id/bio_fragment"
        android:name="com.stable.scoi.presentation.ui.bio.BioFragment"
        tools:layout="@layout/fragment_bio_login"
        />

    <fragment
        android:id="@+id/login_expired_fragment"
        android:name="com.stable.scoi.presentation.ui.login.LoginExpiredFragment"
        tools:layout="@layout/fragment_login_expired">
        <action
            android:id="@+id/action_loginExpiredFragment_to_loginFragment"
            app:destination="@id/login_pin_fragment"/>

    </fragment>

    <fragment
        android:id="@+id/login_pin_fragment"
        android:name="com.stable.scoi.presentation.ui.login.LoginFragment">

        <action
                android:id="@+id/action_loginFragment_to_homeFragment"
                app:destination="@id/homeFragment" />

        <action
            android:id="@+id/action_loginFragment_to_loginExpiredFragment"
            app:destination="@id/login_expired_fragment"/>

    </fragment>




        android:id="@+id/homeFragment"
        android:name="com.stable.scoi.presentation.ui.home.HomeFragment"
        android:label="홈 화면"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_tansfer_fragment"
            app:destination="@id/tansfer_fragment" />
    </fragment>


</navigation>